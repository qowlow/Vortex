-- Vortex BGS Infinity Script
-- Version 1.3
-- [!] Replace game-specific IDs with current values

local Raymon = loadstring(game:HttpGet("https://raw.githubusercontent.com/RaymonLui/Raymon/main/RaymonLibV1"))()
local VirtualUser = game:GetService("VirtualUser")

-- GUI Setup
local Vortex = Raymon:CreateWindow({
    WindowName = "Vortex BGS Infinity",
    Color = Color3.fromRGB(255, 85, 127),
    Size = UDim2.new(0, 500, 0, 400)
})

-- Main Tabs
local AutoTab = Vortex:CreateTab("Auto Farm")
local EggTab = Vortex:CreateTab("Egg Hatching")
local MiscTab = Vortex:CreateTab("Misc")

-- Auto Farm Section
local AutoFarmSection = AutoTab:CreateSection("Farming Options")
local FarmToggle = AutoFarmSection:AddToggle("Auto Farm Bubbles", false, function(State)
    _G.AutoFarm = State
    while _G.AutoFarm and task.wait() do
        game:GetService("ReplicatedStorage").RemoteEvents.BubbleClicked:FireServer()
    end
end)

local CollectToggle = AutoFarmSection:AddToggle("Auto Collect Drops", false, function(State)
    _G.AutoCollect = State
    while _G.AutoCollect and task.wait(0.5) do
        firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, workspace.DropFolder, 0)
        firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, workspace.DropFolder, 1)
    end
end)

local SellToggle = AutoFarmSection:AddToggle("Auto Sell Inventory", false, function(State)
    _G.AutoSell = State
    while _G.AutoSell and task.wait(5) do
        game:GetService("ReplicatedStorage").RemoteEvents.SellAll:FireServer()
    end
end)

-- Egg Hatching Section
local EggSection = EggTab:CreateSection("Hatching Options")
local EggList = {
    "Basic Egg - 1M",
    "Golden Egg - 50M",
    "Rainbow Egg - 500M"
}

local SelectedEgg = EggSection:AddDropdown("Select Egg", EggList, function(Option)
    _G.SelectedEgg = Option
end)

local HatchToggle = EggSection:AddToggle("Auto Hatch", false, function(State)
    _G.AutoHatch = State
    while _G.AutoHatch and task.wait() do
        game:GetService("ReplicatedStorage").RemoteEvents.PurchaseEgg:FireServer(_G.SelectedEgg)
    end
end)

-- Misc Section
local MiscSection = MiscTab:CreateSection("Utilities")
local AFKToggle = MiscSection:AddToggle("Anti-AFK", false, function(State)
    _G.AntiAFK = State
    while _G.AntiAFK and task.wait(30) do
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

local BoostSlider = MiscSection:AddSlider("Game Speed Multiplier", 1, 10, 1, function(Value)
    game:GetService("ReplicatedStorage").Boost.Value = Value
end)

-- Status Display
local StatusSection = Vortex:CreateStatus({
    Title = "Vortex Status",
    Content = {
        "Auto Farming: Off",
        "Egg Hatching: Off",
        "Bubbles Popped: 0",
        "Current Multiplier: 1x"
    }
})

-- Auto-Update Status
spawn(function()
    while task.wait(1) do
        StatusSection:SetStatus({
            "Auto Farming: " .. (_G.AutoFarm and "On" or "Off"),
            "Egg Hatching: " .. (_G.AutoHatch and "On" or "Off"),
            "Bubbles Popped: " .. game:GetService("Players").LocalPlayer.leaderstats.Bubbles.Value,
            "Current Multiplier: " .. game:GetService("ReplicatedStorage").Multiplier.Value .. "x"
        })
    end
end)

Raymon:Notify({
    Title = "Vortex Loaded",
    Description = "Successfully injected Vortex BGS Infinity!",
    Duration = 5
})
